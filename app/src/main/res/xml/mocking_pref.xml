<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <SwitchPreferenceCompat
        app:key="mock_enable"
        app:title="Enable Mocking"/>

    <EditTextPreference
        app:key="mock_lat"
        app:title="Enter in test latitude"
        app:useSimpleSummaryProvider="true"
        android:dependency="mock_enable"/>

    <EditTextPreference
        app:key="mock_lng"
        app:title="Enter in test longitude"
        app:useSimpleSummaryProvider="true"
        android:dependency="mock_enable"/>
</PreferenceScreen>